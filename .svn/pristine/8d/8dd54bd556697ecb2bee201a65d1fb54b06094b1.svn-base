/* pages/device_detail/detail.wxss */
@import "../variable/weui.wxss"

.body{
    display: flex;
    flex-direction: column;
}
.device{
    /* border-bottom: 0.5px solid #111; */
}
.title{
    width:100%;
    display: flex;
    justify-content: center;
}
.device{
    display: flex;
    flex-direction: column;
    margin-top: 20px;
}
.icon{
    width:24px;
    height: 24px;
}
.image{
    width:80px;
    height:50px;
    /* border: 1px solid #111 */
}
.imageContainer{
    width: 100%;
    display: flex;
    justify-content: center
}
.stateContainer{
    width:100%;
    margin-top: 20px;
    display: flex;
    flex-direction: column;
}
.state{
    width:100%;
    display: flex;
}
.key{
    width:80px;
    display: flex;
    margin-left: 10px;
    justify-content: space-between;
    flex-shrink: 0;
}
